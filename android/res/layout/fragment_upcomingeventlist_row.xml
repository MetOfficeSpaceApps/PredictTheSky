<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="3dp" >

    <ImageView
        android:id="@+id/eventlistrow_weathericon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@android:string/untitled"
        android:padding="3dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/eventlistrow_weathericon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/eventlistrow_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/holoAccent" />

        <TextView
            android:id="@+id/eventlistrow_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/eventlistrow_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@android:string/untitled"
        android:padding="3dp"
        android:src="@drawable/ic_action_info" >
    </ImageView>

</RelativeLayout>